<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" />
    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_light" />
    <!-- 圆角 -->
    <corners android:radius="8dp" />
    <!-- 内边距（避免内容贴边框） -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
</shape>